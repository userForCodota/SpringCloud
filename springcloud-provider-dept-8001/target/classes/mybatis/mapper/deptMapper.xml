<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chengfeng.springcloud.dao.DeptDao">
    <insert id="addDept" parameterType="Dept">insert into dept(dname, db_source) values (#{dname},DATABASE());</insert>
    <select id="queryById" parameterType="Long" resultType="Dept">SELECT * FROM dept WHERE deptno = #{deptno};</select>
    <select id="queryAll" resultType="Dept">SELECT * FROM dept;</select>
</mapper>